@using EcomRevisited.ViewModels
@model OrderViewModel

<div class="container mt-5">
    <h1 class="mb-4">Order Details</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Number of Items</th>
                <th scope="col">Destination Country</th>
                <th scope="col">Total Price</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.NumberOfItems</td>
                <td>@Model.DestinationCountry</td>
                <td>@Model.TotalPrice</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Index", "Order", new { id = Model.Id })">View Details</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

