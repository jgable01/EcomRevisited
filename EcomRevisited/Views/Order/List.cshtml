@using EcomRevisited.ViewModels
@model List<OrderViewModel>

<div class="container mt-5">
    <h1 class="mb-4">All Orders</h1>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Number of Items</th>
                <th scope="col">Destination Country</th>
                <th scope="col">Total Price</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.NumberOfItems</td>
                    <td>@order.DestinationCountry</td>
                    <td>@order.TotalPrice</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="@Url.Action("Index", "Order", new { id = order.Id })">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
